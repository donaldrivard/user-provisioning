<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable" >
	

	<aura:attribute name="user" type="User" default="{'sobjectType':'User', 'Name':'','Email':''}"/>

	<aura:attribute name="accountId" type="String"/>
  	<aura:attribute name="account" type="Object"/>
  	<aura:handler name="accountSelected" event="c:CC_AccountSelectedEvent" action="{!c.handleAccount}"/>

	<aura:handler name="init" value="{!this}" action="{!c.init}"/>

 
<div class= "slds">
<div class= "slds-page-header">
<div class= "slds-grid">
<div class="slds-col slds-has-flexi-truncate">
<p class= "slds-text-heading--label">User Provisioning Application</p>
<div class= "slds-grid" >
<div class= "slds-grid slds-type-focus slds-no-space">
<h1 class= "slds-text-heading--medium slds-truncate"
	title= "Create New User " >Create New User </h1>
</div>
</div>
</div>
</div>
</div>
</div>
    
<div class="slds-grid slds-wrap slds-grid--pull-padded">

	<fieldset class="slds-box slds-theme--default slds-container--medium">

    <legend id="newexpenseform" class="slds-text-heading--small 
      slds-p-vertical--large">
     New User Provisioning
    </legend>
    <form class="slds-form--stacked">

      <div class="slds-form-element slds-is-required">
          <div class="slds-form-element__control">
              <ui:inputText aura:id="useremail" label="User Email"
                  class="slds-input"
                  labelClass="slds-form-element__label"
                  value="{!v.user.Email}"
                  required="true"
                  blur="{!c.handleBlur}"
                  />
          </div>
     </div>

     <div class="slds-form-element slds-is-required">
          <div class="slds-form-element__control">
              <ui:inputText aura:id="username" label="User Name"
                  class="slds-input"
                  labelClass="slds-form-element__label"
                  value="{!v.user.Name}"
                  required="true"/>

          </div>
      </div>
 <div class="slds-col--padded slds-hide" aura:id="accounts">
  <div class="slds-form-element slds-lookup" data-select="single">
  <div class="slds-form-element__control">
    <div class="slds-input-has-icon slds-input-has-icon--right">
      <c:CC_AccountBrowser />
    </div>
  </div>
</div>
  </div>
    </form>
    
  </fieldset>
  <div class="slds-col--padded slds-hide" aura:id="accountdetail">
 <div class="slds-col--padded-large slds-size--2-of-6 vertical-bar-left" >
      <c.CC_AccountDetailComponent 
      	account="{!v.account}" 
      	accountId="{!v.accountId}" 
      />
    </div>
   </div> 
 
</div>
  

</aura:component>